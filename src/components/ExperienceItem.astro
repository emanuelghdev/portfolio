---
interface Props {
    title: string
    company: string
    description: string
    date: string
}

const { title, company, description, date } = Astro.props
---

<article
    class="relative mx-12 pt-4 pb-14 lg:pb-6 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4]"
>
    <article class="relative pb-6 lg:pb-12 md:col-span-2">
        <div class="sticky top-0">
            <span class="text-amber-500 -left-[42px] -top-[9px] absolute rounded-full text-5xl">&bull;</span>
            <h3 class="text-2xl lg:text-3xl font-bold text-amber-500 mb-1">{title}</h3>
            <h4 class="font-semibold text-xl lg:text-2xl text-gray-600 dark:text-white mb-1">{company}</h4>
            <time class="p-0 m-0 text-sm lg:text-base text-gray-600/80 dark:text-white/80">{date}</time>
        </div>
    </article>

    <article class="relative flex flex-col text-lg gap-2 pb-4 text-gray-600 text-balance lg:text-wrap dark:text-gray-300 md:col-span-3">
        {description}
    </article>
</article>