const PROJECTS = [
    {
        title: "Aprendefacil",
        description: "Plataforma web para el Colegio de Educación Especial San Rafael, destinada a ayudar alumnos con diversidad funcional a ganar independencia mediante agendas visuales, tareas adaptadas, rutinas flexibles y comunicación directa con los educadores.",
        code: "https://github.com/emanuelghdev/aprendefacil",
        image: "src/assets/Projects/Aprendefacil.png",
        tags: [TAGS.HTML, TAGS.CSS, TAGS.PHP, TAGS.JAVACRIPT, TAGS.MYSQL],
        direction: "md:flex-row",
    },
    {
        title: "Una Habitación Propia",
        description: "Plataforma web para el Colegio de Educación Especial San Rafael, destinada a ayudar alumnos con diversidad funcional a ganar independencia mediante agendas visuales, tareas adaptadas, rutinas flexibles y comunicación directa con los educadores.",
        code: "https://github.com/emanuelghdev/aprendefacil",
        link: "https://refrandle.es/",
        image: "src/assets/Projects/Una_habitacion_propia.png",
        tags: [TAGS.UNITY, TAGS.CSHARP, TAGS.ASEPRITE],
        direction: "md:flex-row-reverse",
    },
    {
        title: "Palestine Support Badges",
        description: "Plataforma web para el Colegio de Educación Especial San Rafael, destinada a ayudar alumnos con diversidad funcional a ganar independencia mediante agendas visuales, tareas adaptadas, rutinas flexibles y comunicación directa con los educadores.",
        code: "https://github.com/emanuelghdev/aprendefacil",
        link: "https://refrandle.es/",
        image: "src/assets/Projects/Palestine_badges.png",
        tags: [TAGS.JAVACRIPT, TAGS.REACT, TAGS.TAILWIND],
        direction: "md:flex-row",
    },
    {
        title: "The Dim Room",
        description: "Plataforma web para el Colegio de Educación Especial San Rafael, destinada a ayudar alumnos con diversidad funcional a ganar independencia mediante agendas visuales, tareas adaptadas, rutinas flexibles y comunicación directa con los educadores.",
        code: "https://github.com/emanuelghdev/aprendefacil",
        link: "https://refrandle.es/",
        image: "src/assets/Projects/The_dim_room.png",
        tags: [TAGS.JAVACRIPT, TAGS.THREEJS, TAGS.WEBGL],
        direction: "md:flex-row-reverse",
    },
    {
        title: "Refrandle",
        description: "Plataforma web para el Colegio de Educación Especial San Rafael, destinada a ayudar alumnos con diversidad funcional a ganar independencia mediante agendas visuales, tareas adaptadas, rutinas flexibles y comunicación directa con los educadores.",
        code: "https://github.com/emanuelghdev/aprendefacil",
        link: "https://refrandle.es/",
        image: "src/assets/Projects/Refrandle.png",
        tags: [TAGS.HTML, TAGS.CSS, TAGS.PHP, TAGS.JAVACRIPT, TAGS.MYSQL],
        direction: "md:flex-row",
    },
]
---

<div class="pt-6 pb-4 lg:pt-10 lg:pb-8">
    <h2 class="flex items-center justify-center gap-x-4 text-3xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-4 md:mb-6">
        <ProjectsIcon class="size-16 lg:size-20" />Featured Projects
    </h2>
</div>

<div class="flex flex-col gap-y-16 md:gap-y-20">
    {PROJECTS.map(({ direction, image, title, description, tags, link, code }) => (
        <article class={`flex flex-col space-x-0 space-y-8 group ${direction} md:space-x-8 md:space-y-0 md:hover:cursor-pointer md:hover:-translate-y-3 transition duration-500 ease-in-out`}>
            <div class="w-full md:w-1/2">
                <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-lg overflow-clip rounded-xl sm:rounded-xl md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
                    <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top-left w-full h-full transition duration-500" loading="lazy" src={image} />
                </div>
            </div>

            <div class="w-full md:w-1/2 md:max-w-lg">
                <h3 class="text-3xl font-bold text-gray-800 dark:text-gray-100">{title}</h3>
                <div class="flex flex-wrap mt-2">
                    <ul class="flex flex-wrap mb-2 gap-2">
                        {tags.map((tag) => (
                            <li>
                                <span class={`flex gap-x-2 rounded-lg text-xs ${tag.class} py-[6px] px-2 `}>
                                    <tag.icon class="size-4" />
                                    {tag.name}
                                </span>
                            </li>
                        ))}
                    </ul>

                    <div class="mt-2 text-gray-700 text-pretty dark:text-gray-400">{description}</div>
                    <footer class="flex items-end justify-start mt-4 gap-x-4">
                        {code && (
                            <SocialBadge href={code}><GitHubIcon class="size-6" />Code</SocialBadge>
                        )}
                        {link && (
                            <SocialBadge href={link}><PreviewIcon class="size-6" />Preview</SocialBadge>
                        )}
                    </footer>
                </div>
            </div>
        </article>
    ))}
</div>