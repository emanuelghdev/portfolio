<style>
    @reference "../styles/global.css";

    /* Estilo base de las cards */
    .card-modern {
        --from: rgba(255,255,255,0.65);
        --to: rgba(255,255,255,0.45);
        --accent: #00a3ff;

        background-image: linear-gradient(90deg, var(--from), var(--to));
        @apply rounded-2xl text-slate-800 dark:text-slate-100 transition-transform duration-200 ease-out overflow-hidden relative
        dark:hover:shadow-[0_4px_6px_-1px_rgba(255,255,255,0.7),_0_2px_4px_-2px_rgba(255,255,255,0.6)];

        border: 1px solid rgba(15,23,42,0.05);
    }

    /* Franja superior delgada de las cards */
    .card-modern::before{
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        height: 4px;
        width: 40%;
        background: linear-gradient(90deg, var(--accent), color-mix(in srgb, var(--accent), black 10%));
        border-bottom-right-radius: 8px;
        opacity: 0.95;
    }

    /* Card azul */
    .card-blue {
        --from: rgba(236,254,255,0.75);
        --to: rgba(224,242,254,0.55);
        
    }

    .card-blue:hover {
        @apply  border border-blue-200 dark:border-cyan-800;
    }

    :global(.dark) .card-blue {
        --from: rgba(2,6,23,0.55);
        --to: rgba(3,105,161,0.12);
        --accent: #0891B2;
    }

    /* Card morado */
    .card-purple {
        --from: rgba(245,237,255,0.75);
        --to: rgba(237,223,255,0.55);
        --accent: #945dd6;
    }

    .card-purple:hover {
        @apply border border-purple-200 dark:border-violet-500;
    }

    :global(.dark) .card-purple {
        --from: rgba(2,6,23,0.55);
        --to: rgba(139,92,246,0.15);
        --accent: #9d6ae6;
    }

    .card-purple::before {
        left: auto;
        right: 0;
        border-bottom-left-radius: 8px;
    }
</style>