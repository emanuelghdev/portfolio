const TAGS = {
    JAVACRIPT: {
        name: "JavaScript",
        class: "bg-black text-white dark:bg-[#fff56e] dark:text-black",
        icon: JavaScriptIcon,
    },
    PHP: {
        name: "PHP",
        class: "bg-[#787cb4] text-white",
        icon: PHPIcon,
    },
    HTML: {
        name: "HTML5",
        class: "bg-[#ca370c] text-white dark:bg-[#ef7f34] dark:text-black",
        icon: HTMLIcon,
    },
    CSS: {
        name: "CSS",
        class: "bg-[#0f2267] text-white dark:bg-[#7a96ff] dark:text-black",
        icon: CSSIcon,
    },
    CSHARP: {
        name: "C#",
        class: "bg-[#623ba1] text-white",
        icon: CSharpIcon,
    },
    UNITY: {
        name: "Unity",
        class: "bg-[#222c37] text-white",
        icon: UnityIcon,
    },
    ASEPRITE: {
        name: "Aseprite",
        class: "bg-[#583e46] text-white",
        icon: AsepriteIcon,
    },
    WEBGL: {
        name: "WebGL",
        class: "bg-[#931821] text-white",
        icon: WebGLIcon,
    },
    THREEJS: {
        name: "Three.js",
        class: "bg-black text-white",
        icon: ThreejsIcon,
    },
