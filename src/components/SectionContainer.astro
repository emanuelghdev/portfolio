---
interface Props {
    id?: string
    className?: string
}

const { className, id } = Astro.props
---

<section
    id={id}
    data-section={id}
    class={`section ${className} scroll-m-20 w-full mx-auto container lg:max-w-4xl md:max-w-2xl my-24 mb-24 lg:my-32 lg:mb-24`}
>
    <slot></slot>
</section>