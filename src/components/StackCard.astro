---
interface Props {
    colorIcon?: string
    name?: string
}

const {colorIcon = "", name } =Astro.props
---

<div class="group relative flex justify-center md:block">
    <div class="flex flex-col justify-center h-[6rem] w-[6.25rem] bg-white dark:bg-[#1c1b28] rounded-xl shadow-lg border border-gray-200 dark:border-gray-800 hover:shadow-xl transition-all duration-150 hover:-translate-y-2">
        <div class=`flex justify-center items-center h-2/3 text-4xl text-center ${colorIcon} overflow-visible`><slot></slot></div>
        <h3 class="flex justify-center items-center font-semibold text-gray-900 h-1/3 dark:text-white text-center">{name}</h3>
    </div>
</div>